{% comment %}
=========================================================
SECTION: Gift Banner (FINAL PRODUCTION SAFE)
=========================================================
{% endcomment %}

<section class="gift-banner" id="gift-banner-{{ section.id }}">

  <!-- ================= TOP BAR ================= -->
  <header class="gift-topbar">
    <div class="topbar-inner">

      <button class="hamburger" aria-label="Menu">☰</button>

      <div class="topbar-logo">
        {{ section.settings.logo_text }}
      </div>

      <div class="topbar-heading">
        {{ section.settings.topbar_heading }}
      </div>

      <a href="{{ section.settings.topbar_button_link }}"
         class="btn choose-gift desktop-only">
        {{ section.settings.topbar_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>

    <div class="mobile-menu">
      <a href="{{ section.settings.topbar_button_link }}"
         class="btn choose-gift mobile-only">
        {{ section.settings.topbar_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>
  </header>

  <!-- ================= BANNER GRID ================= -->
  <div class="gift-banner-grid">

    <!-- TOP IMAGE -->
    {% if section.settings.banner_top_image != blank %}
    <div class="banner-image-full {% if section.settings.hide_top_mobile %}hide-mobile{% endif %}">
      <img
        src="{{ section.settings.banner_top_image | image_url: width: 2000 }}"
        alt="Gift banner top image"
        loading="lazy">
    </div>
    {% endif %}

    <!-- TEXT BLOCK -->
    <div class="banner-text {% if section.settings.hide_text_mobile %}hide-mobile{% endif %}">
      <h1>{{ section.settings.hero_heading }}</h1>
      <p>{{ section.settings.hero_description }}</p>

      <a href="{{ section.settings.hero_button_link }}"
         class="btn shop-now">
        {{ section.settings.hero_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>

    <!-- RIGHT IMAGE -->
    {% if section.settings.banner_side_image != blank %}
    <div class="banner-image-right {% if section.settings.hide_side_mobile %}hide-mobile{% endif %}">
      <img
        src="{{ section.settings.banner_side_image | image_url: width: 1400 }}"
        alt="Gift banner side image"
        loading="lazy">
    </div>
    {% endif %}

  </div>

  <!-- INFO BAR -->
  <div class="gift-infobar">
    {{ section.settings.info_text }}
  </div>

</section>

<!-- ================= STYLES ================= -->
<style>
#gift-banner-{{ section.id }} {
  font-family: 'Jost', sans-serif;
}

/* TOP BAR */
.gift-topbar {
  background: #f7f7f7;
  box-shadow: 0 2px 4px rgba(0,0,0,.15);
}
.topbar-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
}
.topbar-logo { font-size: 20px; font-weight: 600; }
.topbar-heading { font-size: 16px; }

.hamburger {
  display: none;
  background: none;
  border: none;
  font-size: 22px;
}
.mobile-menu { display: none; padding: 20px; background: #f2f2f2; }

/* GRID */
.gift-banner-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: stretch;
}

/* TOP IMAGE FULL WIDTH */
.banner-image-full {
  grid-column: 1 / -1;
  height: 420px;
}
.banner-image-full img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* RIGHT IMAGE */
.banner-image-right {
  height: 100%;
}
.banner-image-right img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* TEXT */
.banner-text {
  padding: 80px 60px;
}
.banner-text h1 {
  font-size: 56px;
  margin-bottom: 16px;
}
.banner-text p {
  font-size: 18px;
  margin-bottom: 28px;
  max-width: 420px;
}

/* INFO BAR */
.gift-infobar {
  background: #f5f5f5;
  text-align: center;
  padding: 12px;
  font-size: 14px;
}

/* BUTTONS */
.btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 14px 30px;
  border: 2px solid #000;
  text-transform: uppercase;
  font-weight: 500;
  overflow: hidden;
  transition: color .3s ease;
  isolation: isolate;
}
.btn::before {
  content: '';
  position: absolute;
  inset: 0;
  transform: translateX(-100%);
  transition: transform .3s ease;
  z-index: -1;
}
.btn span { position: relative; z-index: 1; }

/* Choose Gift */
.choose-gift { background: #fff544; color: #000; }
.choose-gift::before { background: #000; }
.choose-gift:hover::before { transform: translateX(0); }
.choose-gift:hover { color: #fff; }

/* Shop Now */
.shop-now { background: #000; color: #fff; }
.shop-now::before { background: #fff544; }
.shop-now:hover::before { transform: translateX(0); }
.shop-now:hover { color: #000; }

/* RESPONSIVE */
.desktop-only { display: inline-flex; }
.mobile-only { display: none; }

.hide-mobile { display: block; }

@media (max-width: 768px) {
  .hamburger { display: block; }
  .topbar-heading,
  .desktop-only { display: none; }

  .gift-banner-grid {
    grid-template-columns: 1fr;
  }

  .banner-text {
    padding: 40px 20px;
    text-align: center;
  }

  .banner-text p {
    max-width: 100%;
  }

  .mobile-only { display: inline-flex; }

  .mobile-menu.active { display: block; }

  .topbar-logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .hide-mobile { display: none !important; }
}
</style>

<!-- ================= JS ================= -->
<script>
document.addEventListener('DOMContentLoaded', function () {
  const hamburger = document.querySelector('#gift-banner-{{ section.id }} .hamburger');
  const menu = document.querySelector('#gift-banner-{{ section.id }} .mobile-menu');
  if(hamburger){
    hamburger.addEventListener('click', () => {
      menu.classList.toggle('active');
    });
  }
});
</script>

{% schema %}
{
  "name": "Gift Banner",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "topbar_heading", "label": "Top Bar Heading", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "topbar_button_text", "label": "Choose Gift Button Text", "default": "Choose Gift" },
    { "type": "url", "id": "topbar_button_link", "label": "Choose Gift Link" },

    { "type": "image_picker", "id": "banner_top_image", "label": "Top Banner Image" },
    { "type": "checkbox", "id": "hide_top_mobile", "label": "Hide Top Image on Mobile", "default": false },

    { "type": "image_picker", "id": "banner_side_image", "label": "Side Banner Image" },
    { "type": "checkbox", "id": "hide_side_mobile", "label": "Hide Side Image on Mobile", "default": false },

    { "type": "text", "id": "hero_heading", "label": "Banner Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "hero_description", "label": "Banner Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
    { "type": "text", "id": "hero_button_text", "label": "Shop Now Button Text", "default": "Shop Now" },
    { "type": "url", "id": "hero_button_link", "label": "Shop Now Link" },
    { "type": "checkbox", "id": "hide_text_mobile", "label": "Hide Text on Mobile", "default": false },

    { "type": "text", "id": "info_text", "label": "Info Bar Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [
    { "name": "Gift Banner" }
  ]
}
{% endschema %}
