{% comment %}
=========================================================
SECTION: Gift Banner
Built from scratch for hiring test
- No Dawn/Horizon reuse
- Fully editable
- Responsive
- Vanilla CSS + JS only
=========================================================
{% endcomment %}

<section class="gift-banner" id="gift-banner-{{ section.id }}">

  <!-- ================= TOP BAR ================= -->
  <div class="gift-topbar">
    <div class="topbar-inner">

      <div class="topbar-logo">
        {{ section.settings.logo_text }}
      </div>

      <div class="topbar-heading">
        {{ section.settings.topbar_heading }}
      </div>

      <a href="{{ section.settings.topbar_button_link }}"
         class="btn-slide btn-choose">
        <span class="btn-text">{{ section.settings.topbar_button_text }}</span>
        <span class="arrow">→</span>
      </a>

    </div>
  </div>

  <!-- ================= BANNER ================= -->
  <div class="gift-banner-wrapper">

    {% if section.settings.show_top_image %}
      <div class="banner-image full-image">
        <img
          src="{{ section.settings.top_image | image_url: width: 1600 }}"
          alt="Banner Image"
          width="1600"
          height="600"
          loading="lazy">
      </div>
    {% endif %}

    <div class="banner-grid">

      <div class="banner-text">
        <h1>{{ section.settings.hero_heading }}</h1>
        <p>{{ section.settings.hero_description }}</p>

        <a href="{{ section.settings.hero_button_link }}"
           class="btn-slide btn-shop">
          <span class="btn-text">{{ section.settings.hero_button_text }}</span>
          <span class="arrow">→</span>
        </a>
      </div>

      {% if section.settings.show_side_image %}
        <div class="banner-image side-image">
          <img
            src="{{ section.settings.side_image | image_url: width: 800 }}"
            alt="Side Image"
            width="800"
            height="800"
            loading="lazy">
        </div>
      {% endif %}

    </div>
  </div>

  <!-- ================= INFO BAR ================= -->
  <div class="gift-infobar">
    {{ section.settings.info_text }}
  </div>

</section>

<style>
/* ---------- BASE ---------- */
#gift-banner-{{ section.id }} {
  font-family: 'Jost', sans-serif;
}

a { text-decoration: none; }

/* ---------- TOP BAR ---------- */
.gift-topbar {
  background: #f7f7f7;
  padding: 20px 40px;
}

.topbar-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* ---------- BANNER ---------- */
.banner-image img {
  width: 100%;
  height: auto;
  display: block;
}

.banner-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  padding: 60px;
  align-items: center;
}

.banner-text h1 {
  font-size: 48px;
  margin-bottom: 16px;
}

.banner-text p {
  font-size: 18px;
  margin-bottom: 24px;
}

/* ---------- BUTTONS ---------- */
.btn-slide {
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 14px 26px;
  border: 2px solid #000;
  overflow: hidden;
}

.btn-slide::before {
  content: '';
  position: absolute;
  inset: 0;
  transition: transform 0.35s ease;
  z-index: 0;
}

.btn-text, .arrow {
  position: relative;
  z-index: 1;
}

/* Choose Gift */
.btn-choose {
  background: #fff544;
  color: #000;
}

.btn-choose::before {
  background: #000;
  transform: translateX(-100%);
}

.btn-choose:hover::before {
  transform: translateX(0);
}

.btn-choose:hover {
  color: #fff;
}

/* Shop Now */
.btn-shop {
  background: #000;
  color: #fff;
}

.btn-shop::before {
  background: #fff544;
  transform: translateX(100%);
}

.btn-shop:hover::before {
  transform: translateX(0);
}

.btn-shop:hover {
  color: #000;
}

/* ---------- INFO BAR ---------- */
.gift-infobar {
  background: #f5f5f5;
  text-align: center;
  padding: 12px;
}

/* ---------- MOBILE ---------- */
@media (max-width: 768px) {

  .topbar-heading {
    display: none;
  }

  .banner-grid {
    grid-template-columns: 1fr;
    padding: 40px 20px;
    text-align: center;
  }

}
</style>

{% schema %}
{
  "name": "Gift Banner",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "topbar_heading", "label": "Top Bar Heading" },
    { "type": "text", "id": "topbar_button_text", "label": "Top Button Text" },
    { "type": "url", "id": "topbar_button_link", "label": "Top Button Link" },

    { "type": "checkbox", "id": "show_top_image", "label": "Show Top Image", "default": true },
    { "type": "image_picker", "id": "top_image", "label": "Top Banner Image" },

    { "type": "text", "id": "hero_heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "hero_description", "label": "Description" },
    { "type": "text", "id": "hero_button_text", "label": "Shop Button Text" },
    { "type": "url", "id": "hero_button_link", "label": "Shop Button Link" },

    { "type": "checkbox", "id": "show_side_image", "label": "Show Side Image", "default": true },
    { "type": "image_picker", "id": "side_image", "label": "Side Image" },

    { "type": "text", "id": "info_text", "label": "Info Bar Text" }
  ],
  "presets": [{ "name": "Gift Banner" }]
}
{% endschema %}
