{% comment %}
=========================================================
SECTION: Gift Banner
Custom coded – no Dawn/Horizon reuse
Responsive, schema-driven, vanilla JS
=========================================================
{% endcomment %}

<section class="gift-banner" id="gift-banner-{{ section.id }}">

  <!-- ================= TOP BAR ================= -->
  <header class="gift-topbar">
    <div class="topbar-inner">

      <!-- Hamburger (Mobile) -->
      <button class="hamburger" aria-label="Menu">
        ☰
      </button>

      <!-- Logo Text -->
      <div class="topbar-logo">
        {{ section.settings.logo_text }}
      </div>

      <!-- Center Heading (Desktop only) -->
      <div class="topbar-heading">
        {{ section.settings.topbar_heading }}
      </div>

      <!-- Choose Gift Button (Desktop only) -->
      <a href="{{ section.settings.topbar_button_link }}"
         class="btn choose-gift desktop-only">
        {{ section.settings.topbar_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu">
      <a href="{{ section.settings.topbar_button_link }}"
         class="btn choose-gift mobile-only">
        {{ section.settings.topbar_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>
  </header>

  <!-- ================= BANNER ================= -->
  <div class="gift-banner-grid">

    <!-- Full Width Top Image -->
    <div class="banner-image-full">
      <img
        src="{{ section.settings.banner_top_image | image_url: width: 2000 }}"
        width="2000"
        height="600"
        alt="Gift banner image"
        loading="lazy">
    </div>

    <!-- Text Block -->
    <div class="banner-text">
      <h1>{{ section.settings.hero_heading }}</h1>
      <p>{{ section.settings.hero_description }}</p>

      <a href="{{ section.settings.hero_button_link }}"
         class="btn shop-now">
        {{ section.settings.hero_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>

    <!-- Right Image -->
    <div class="banner-image-right">
      <img
        src="{{ section.settings.banner_side_image | image_url: width: 1200 }}"
        width="1200"
        height="800"
        alt="Gift side image"
        loading="lazy">
    </div>

  </div>

  <!-- ================= INFO BAR ================= -->
  <div class="gift-infobar">
    {{ section.settings.info_text }}
  </div>

</section>

<!-- ================= STYLES ================= -->
<style>
#gift-banner-{{ section.id }} {
  font-family: 'Jost', sans-serif;
}

/* ---------- TOP BAR ---------- */
.gift-topbar {
  background: #f7f7f7;
  box-shadow: 0 2px 4px rgba(0,0,0,.15);
}

.topbar-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
}

.topbar-logo {
  font-size: 20px;
  font-weight: 500;
}

.topbar-heading {
  font-size: 16px;
}

.hamburger {
  display: none;
  background: none;
  border: none;
  font-size: 22px;
}

.mobile-menu {
  display: none;
  padding: 20px;
  background: #f2f2f2;
}

/* ---------- BANNER GRID ---------- */
.gift-banner-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
}

.banner-image-full {
  grid-column: 1 / -1;
}

.banner-image-full img,
.banner-image-right img {
  width: 100%;
  height: auto;
  display: block;
}

.banner-text {
  padding: 60px;
}

.banner-text h1 {
  font-size: 48px;
  margin-bottom: 16px;
}

.banner-text p {
  font-size: 18px;
  margin-bottom: 24px;
}

/* ---------- INFO BAR ---------- */
.gift-infobar {
  background: #f5f5f5;
  text-align: center;
  padding: 12px;
  font-size: 14px;
}

/* ---------- BUTTONS ---------- */
.btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 14px 26px;
  text-transform: uppercase;
  overflow: hidden;
  border: 2px solid #000;
  transition: color .3s ease;
}

.btn::before {
  content: '';
  position: absolute;
  inset: 0;
  transform: translateX(-100%);
  transition: transform .3s ease;
  z-index: 0;
}

.btn span,
.btn {
  position: relative;
  z-index: 1;
}

/* Choose Gift */
.choose-gift {
  background: #fff544;
  color: #000;
}
.choose-gift::before {
  background: #000;
  color: #fff544;
  
}
.choose-gift:hover::before {
  transform: translateX(0);
}
.choose-gift:hover {
  color: #fff544;
}

/* Shop Now */
.shop-now {
  background: #000;
  color: #fff;
}
.shop-now::before {
  background: #fff544;
}
.shop-now:hover::before {
  transform: translateX(0);
}
.shop-now:hover {
  color: #000;
}

/* ---------- RESPONSIVE ---------- */
.desktop-only { display: inline-flex; }
.mobile-only { display: none; }

@media (max-width: 768px) {
  .hamburger { display: block; }
  .topbar-heading,
  .desktop-only { display: none; }

  .gift-banner-grid {
    grid-template-columns: 1fr;
  }

  .banner-text {
    text-align: center;
    padding: 40px 20px;
  }

  .mobile-only {
    display: inline-flex;
  }

  .mobile-menu.active {
    display: block;
  }
}
</style>

<!-- ================= JS ================= -->
<script>
document.addEventListener('DOMContentLoaded', function () {
  const hamburger = document.querySelector('#gift-banner-{{ section.id }} .hamburger');
  const menu = document.querySelector('#gift-banner-{{ section.id }} .mobile-menu');

  hamburger.addEventListener('click', () => {
    menu.classList.toggle('active');
  });
});
</script>

{% schema %}
{
  "name": "Gift Banner",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "topbar_heading", "label": "Top Bar Heading", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "topbar_button_text", "label": "Choose Gift Button Text", "default": "Choose Gift" },
    { "type": "url", "id": "topbar_button_link", "label": "Choose Gift Link" },

    { "type": "image_picker", "id": "banner_top_image", "label": "Top Banner Image" },
    { "type": "image_picker", "id": "banner_side_image", "label": "Side Banner Image" },

    { "type": "text", "id": "hero_heading", "label": "Banner Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "hero_description", "label": "Banner Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
    { "type": "text", "id": "hero_button_text", "label": "Shop Now Button Text", "default": "Shop Now" },
    { "type": "url", "id": "hero_button_link", "label": "Shop Now Link" },

    { "type": "text", "id": "info_text", "label": "Info Bar Text", "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR" }
  ],
  "presets": [{ "name": "Gift Banner" }]
}
{% endschema %}
