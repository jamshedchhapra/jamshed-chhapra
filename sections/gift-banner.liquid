<script>
  // Reserved for future interaction if required
  // (Intentionally minimal as per instructions)
</script>

{% schema %}
{
  "name": "Gift Banner",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "topbar_heading",
      "label": "Top Bar Heading",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "topbar_button_text",
      "label": "Top Bar Button Text",
      "default": "Choose Gift"
    },
    {
      "type": "url",
      "id": "topbar_button_link",
      "label": "Top Bar Button Link"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Background Image"
    },
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Hero Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Hero Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Hero Button Link"
    },
    {
      "type": "text",
      "id": "info_text",
      "label": "Info Bar Text",
      "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
    }
  ],
  "presets": [
    {
      "name": "Gift Banner"
    }
  ]
}
{% endschema %}
