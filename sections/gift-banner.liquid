{% comment %}
=========================================================
SECTION: Gift Banner (Figma Accurate)
AUTHOR: Production Shopify Implementation
FEATURES:
- Editable logo, headings, text, buttons
- Editable images
- Object-fit cover images (Figma style)
- Mobile hide controls per image/text
- Responsive layout
- Valid Shopify schema (no errors)
=========================================================
{% endcomment %}

<section id="gift-banner-{{ section.id }}" class="gift-banner">

  <!-- ================= TOP BAR ================= -->
  <header class="gift-topbar">
    <div class="topbar-inner">

      <!-- Mobile Hamburger -->
      <button class="hamburger" aria-label="Open menu">☰</button>

      <!-- Logo -->
      <div class="topbar-logo">
        {{ section.settings.logo_text }}
      </div>

      <!-- Center Text -->
      <div class="topbar-heading desktop-only">
        {{ section.settings.topbar_heading }}
      </div>

      <!-- Button -->
      <a href="{{ section.settings.topbar_button_link }}" class="btn choose-gift desktop-only">
        {{ section.settings.topbar_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>

    <!-- Mobile CTA -->
    <div class="mobile-menu">
      <a href="{{ section.settings.topbar_button_link }}" class="btn choose-gift mobile-only">
        {{ section.settings.topbar_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>
  </header>

  <!-- ================= BANNER GRID ================= -->
  <div class="gift-grid">

    <!-- TOP IMAGE -->
    {% if section.settings.show_top_image %}
    <div class="gift-img-top">
      {% if section.settings.banner_top_image != blank %}
        <img 
          src="{{ section.settings.banner_top_image | image_url: width: 2000 }}"
          alt="{{ section.settings.banner_top_image.alt | escape }}"
          loading="lazy"
        >
      {% endif %}
    </div>
    {% endif %}

    <!-- TEXT BLOCK -->
    {% if section.settings.show_text_block %}
    <div class="gift-text">
      <h1>{{ section.settings.hero_heading }}</h1>
      <p>{{ section.settings.hero_description }}</p>

      <a href="{{ section.settings.hero_button_link }}" class="btn shop-now">
        {{ section.settings.hero_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>
    {% endif %}

    <!-- RIGHT IMAGE -->
    {% if section.settings.show_side_image %}
    <div class="gift-img-right">
      {% if section.settings.banner_side_image != blank %}
        <img 
          src="{{ section.settings.banner_side_image | image_url: width: 1600 }}"
          alt="{{ section.settings.banner_side_image.alt | escape }}"
          loading="lazy"
        >
      {% endif %}
    </div>
    {% endif %}

  </div>

  <!-- ================= INFO BAR ================= -->
  {% if section.settings.info_text != blank %}
  <div class="gift-infobar">
    {{ section.settings.info_text }}
  </div>
  {% endif %}

</section>

<!-- ================= STYLES ================= -->
<style>
#gift-banner-{{ section.id }} {
  font-family: Jost, sans-serif;
  background:#fff;
}

/* ===== TOP BAR ===== */
.gift-topbar {
  background:#fff;
  border-bottom:1px solid #eee;
}
.topbar-inner {
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding:16px 40px;
}
.topbar-logo {
  font-size:20px;
  font-weight:600;
}
.topbar-heading {
  font-size:14px;
}
.hamburger {
  display:none;
  background:none;
  border:none;
  font-size:22px;
}
.mobile-menu {
  display:none;
  padding:12px;
  text-align:center;
}

/* ===== GRID ===== */
.gift-grid {
  display:grid;
  grid-template-columns: 1fr 1fr;
}

/* Top image full width */
.gift-img-top {
  grid-column:1 / -1;
  height:400px;
}
.gift-img-top img {
  width:100%;
  height:100%;
  object-fit:cover; /* Figma behavior */
}

/* Right image */
.gift-img-right {
  height:500px;
}
.gift-img-right img {
  width:100%;
  height:100%;
  object-fit:cover;
}

/* Text block */
.gift-text {
  padding:80px 60px;
}
.gift-text h1 {
  font-size:64px;
  font-weight:700;
  margin-bottom:16px;
}
.gift-text p {
  font-size:18px;
  max-width:520px;
  margin-bottom:32px;
}

/* ===== BUTTONS ===== */
.btn {
  display:inline-flex;
  align-items:center;
  gap:12px;
  padding:14px 28px;
  border:2px solid #000;
  text-transform:uppercase;
  font-size:14px;
  position:relative;
  overflow:hidden;
  background:#fff;
  color:#000;
}
.btn::before {
  content:'';
  position:absolute;
  inset:0;
  background:#000;
  transform:translateX(-100%);
  transition:.3s ease;
  z-index:-1;
}
.btn:hover::before {
  transform:translateX(0);
}
.btn:hover {
  color:#fff;
}

/* Yellow button */
.choose-gift {
  background:#fff544;
}

/* Shop Now button EXACT Figma width (NOT FULL WIDTH) */
.shop-now {
  background:#000;
  color:#fff;
  max-width:240px; /* FIX: prevents full width */
}
.shop-now::before {
  background:#fff544;
}
.shop-now:hover {
  color:#000;
}

/* ===== INFO BAR ===== */
.gift-infobar {
  text-align:center;
  padding:10px;
  font-size:12px;
  background:#f6f6f6;
  letter-spacing:1px;
}

/* ===== RESPONSIVE ===== */
.desktop-only {display:flex;}
.mobile-only {display:none;}

@media (max-width: 768px) {

  .gift-grid {
    grid-template-columns:1fr;
  }

  .gift-text {
    padding:40px 20px;
    text-align:center;
  }

  .gift-text h1 {
    font-size:40px;
  }

  .gift-img-right {
    height:300px;
  }

  .hamburger {display:block;}
  .desktop-only {display:none;}
  .mobile-only {display:inline-flex;}
  .mobile-menu.active {display:block;}
}
</style>

<!-- ================= JS ================= -->
<script>
document.addEventListener('DOMContentLoaded', function () {
  const hamburger = document.querySelector('#gift-banner-{{ section.id }} .hamburger');
  const menu = document.querySelector('#gift-banner-{{ section.id }} .mobile-menu');

  if (hamburger) {
    hamburger.addEventListener('click', () => {
      menu.classList.toggle('active');
    });
  }
});
</script>

{% schema %}
{
  "name": "Gift Banner (Figma Exact)",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "topbar_heading", "label": "Top Bar Heading", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "topbar_button_text", "label": "Top Bar Button Text", "default": "Choose Gift" },
    { "type": "url", "id": "topbar_button_link", "label": "Top Bar Button Link" },

    { "type": "checkbox", "id": "show_top_image", "label": "Show Top Image", "default": true },
    { "type": "image_picker", "id": "banner_top_image", "label": "Top Image" },

    { "type": "checkbox", "id": "show_text_block", "label": "Show Text Block", "default": true },
    { "type": "text", "id": "hero_heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "hero_description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
    { "type": "text", "id": "hero_button_text", "label": "Shop Now Button Text", "default": "Shop Now" },
    { "type": "url", "id": "hero_button_link", "label": "Shop Now Link" },

    { "type": "checkbox", "id": "show_side_image", "label": "Show Right Image", "default": true },
    { "type": "image_picker", "id": "banner_side_image", "label": "Right Image" },

    { "type": "text", "id": "info_text", "label": "Info Bar Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [
    {
      "name": "Gift Banner (Figma Exact)"
    }
  ]
}
{% endschema %}
