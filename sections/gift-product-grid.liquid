{% comment %}
=========================================================
SECTION: Lookbook Product Grid with Quick Shop
PURPOSE:
- Product grid with clickable hotspot (circle)
- Opens Quick Shop popup
- Supports variants
- Add to cart via AJAX
- Mobile & tablet responsive
- Vanilla JS only
=========================================================
{% endcomment %}

<section
  id="lookbook-{{ section.id }}"
  class="lookbook-section"
>

  <!-- ================= PRODUCT GRID ================= -->
  <div class="lookbook-grid">

    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}

        <div class="lookbook-item">

          <!-- Product Image -->
          <img
            src="{{ product.featured_image | image_url: width: 1000 }}"
            alt="{{ product.title }}"
            loading="lazy"
          >

          <!-- Clickable Hotspot -->
          <button
            class="hotspot"
            data-product-handle="{{ product.handle }}"
            aria-label="Quick shop {{ product.title }}"
          >
            +
          </button>

        </div>

      {% endif %}
    {% endfor %}

  </div>

  <!-- ================= QUICK SHOP MODAL ================= -->
  <div class="quickshop-modal" aria-hidden="true">

    <!-- Overlay -->
    <div class="quickshop-overlay"></div>

    <!-- Modal Content -->
    <div class="quickshop-content">

      <!-- Close Button -->
      <button class="quickshop-close" aria-label="Close">
        Ã—
      </button>

      <!-- Product Data (Injected by JS) -->
      <div class="quickshop-body">
        <!-- JS will inject product HTML here -->
      </div>

    </div>
  </div>

</section>

<!-- ================= STYLES ================= -->
<style>
/* ---------- BASE ---------- */
#lookbook-{{ section.id }} {
  font-family: 'Jost', sans-serif;
}

/* ---------- GRID ---------- */
.lookbook-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
}

.lookbook-item {
  position: relative;
}

.lookbook-item img {
  width: 100%;
  display: block;
}

/* ---------- HOTSPOT ---------- */
.hotspot {
  position: absolute;
  top: 20%;
  left: 60%;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: none;
  background: #000;
  color: #fff;
  font-size: 22px;
  cursor: pointer;
}

/* ---------- MODAL ---------- */
.quickshop-modal {
  position: fixed;
  inset: 0;
  display: none;
  z-index: 9999;
}

.quickshop-modal.active {
  display: block;
}

/* Overlay */
.quickshop-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.6);
}

/* Modal box */
.quickshop-content {
  position: relative;
  background: #fff;
  max-width: 420px;
  margin: 80px auto;
  padding: 30px;
}

/* Close */
.quickshop-close {
  position: absolute;
  top: 10px;
  right: 10px;
  background: none;
  border: none;
  font-size: 22px;
  cursor: pointer;
}

/* ---------- QUICK SHOP CONTENT ---------- */
.quickshop-body h2 {
  font-size: 20px;
  margin-bottom: 10px;
}

.quickshop-body .price {
  margin-bottom: 15px;
  font-weight: 500;
}

.quickshop-body select,
.quickshop-body button {
  width: 100%;
  padding: 12px;
  margin-bottom: 10px;
}

/* ---------- MOBILE ---------- */
@media (max-width: 768px) {
  .lookbook-grid {
    grid-template-columns: 1fr;
  }

  .quickshop-content {
    width: 90%;
    margin: 40px auto;
  }
}
</style>

<!-- ================= JAVASCRIPT ================= -->
<script>
document.addEventListener('DOMContentLoaded', () => {

  const section = document.querySelector('#lookbook-{{ section.id }}');
  const modal = section.querySelector('.quickshop-modal');
  const body = section.querySelector('.quickshop-body');

  /* ---------------- OPEN QUICK SHOP ---------------- */
  section.querySelectorAll('.hotspot').forEach(button => {
    button.addEventListener('click', async () => {

      const handle = button.dataset.productHandle;

      // Fetch product JSON
      const response = await fetch(`/products/${handle}.js`);
      const product = await response.json();

      // Build variant options
      let variantsHTML = '';
      if (product.variants.length > 1) {
        variantsHTML = `
          <select id="variant-select">
            ${product.variants.map(v =>
              `<option value="${v.id}">${v.title}</option>`
            ).join('')}
          </select>
        `;
      } else {
        variantsHTML = `<input type="hidden" id="variant-select" value="${product.variants[0].id}">`;
      }

      // Inject HTML
      body.innerHTML = `
        <h2>${product.title}</h2>
        <div class="price">${Shopify.formatMoney(product.price)}</div>

        ${variantsHTML}

        <button id="add-to-cart">Add to Cart</button>
      `;

      modal.classList.add('active');
      modal.setAttribute('aria-hidden', 'false');

      /* ---------------- ADD TO CART ---------------- */
      body.querySelector('#add-to-cart').addEventListener('click', async () => {

        const variantId = body.querySelector('#variant-select').value;

        await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });

        modal.classList.remove('active');
      });
    });
  });

  /* ---------------- CLOSE MODAL ---------------- */
  section.querySelector('.quickshop-close').addEventListener('click', () => {
    modal.classList.remove('active');
  });

  section.querySelector('.quickshop-overlay').addEventListener('click', () => {
    modal.classList.remove('active');
  });

});
</script>

{% schema %}
{
  "name": "Lookbook Quick Shop",
  "blocks": [
    {
      "type": "product",
      "name": "Product Item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lookbook Quick Shop"
    }
  ]
}
{% endschema %}
