{% comment %}
=========================================================
SECTION: Product Grid with Quick Shop
PURPOSE:
- Custom product grid
- Lookbook-style quick shop (+ icon)
- Popup modal with product details
- Vanilla JS only
- Uses Shopify routes object
- Fully responsive
=========================================================
{% endcomment %}

<section id="quickshop-{{ section.id }}" class="quickshop-section">

  <!-- ================= PRODUCT GRID ================= -->
  <div class="product-grid">
    {% for product in section.settings.collection.products %}
      {% assign first_variant = product.variants.first %}

      <div class="product-card">

        <!-- Product Image -->
        <div class="product-image-wrapper">

          <img
            src="{{ product.featured_image | image_url: width: 600 }}"
            width="600"
            height="800"
            alt="{{ product.title | escape }}"
            loading="lazy">

          <!-- Quick Shop Trigger -->
          <button
            class="quickshop-trigger"
            aria-label="Quick shop {{ product.title }}"
            data-product-title="{{ product.title | escape }}"
            data-product-image="{{ product.featured_image | image_url: width: 600 }}"
            data-variant-id="{{ first_variant.id }}"
            data-price="{{ first_variant.price | money }}"
          >
            +
          </button>
        </div>

        <!-- Product Meta -->
        <h3 class="product-title">{{ product.title }}</h3>
        <p class="product-price">{{ first_variant.price | money }}</p>

      </div>
    {% endfor %}
  </div>

  <!-- ================= QUICK SHOP MODAL ================= -->
  <div class="quickshop-modal" aria-hidden="true">

    <div class="quickshop-overlay"></div>

    <div class="quickshop-content" role="dialog" aria-modal="true">

      <!-- Close Button -->
      <button class="quickshop-close" aria-label="Close quick shop">
        ×
      </button>

      <!-- Modal Image -->
      <div class="quickshop-image">
        <img
          id="qs-image"
          src="{{ 'placeholder.png' | asset_url }}"
          width="600"
          height="800"
          alt="Selected product image">
      </div>

      <!-- Modal Info -->
      <div class="quickshop-info">
        <h2 id="qs-title">Product title</h2>
        <p id="qs-price">$0.00</p>

        <!-- Add to Cart -->
        <form method="post" action="{{ routes.cart_add_url }}">
          <input type="hidden" name="id" id="qs-variant-id">
          <button type="submit" class="btn-add-to-cart">
            Add to Cart
          </button>
        </form>
      </div>

    </div>
  </div>

</section>

<!-- ================= STYLES ================= -->
<style>
/* ---------- GRID ---------- */
.product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32px;
}

.product-image-wrapper {
  position: relative;
}

.product-image-wrapper img {
  width: 100%;
  height: auto;
  display: block;
}

/* ---------- QUICK SHOP BUTTON ---------- */
.quickshop-trigger {
  position: absolute;
  bottom: 16px;
  right: 16px;
  width: 42px;
  height: 42px;
  border-radius: 50%;
  background: #000;
  color: #fff;
  font-size: 22px;
  border: none;
  cursor: pointer;
}

/* ---------- MODAL ---------- */
.quickshop-modal {
  display: none;
  position: fixed;
  inset: 0;
  z-index: 999;
}

.quickshop-modal.active {
  display: block;
}

.quickshop-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.6);
}

.quickshop-content {
  position: relative;
  max-width: 900px;
  margin: 60px auto;
  background: #fff;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32px;
  padding: 32px;
}

/* ---------- CLOSE ---------- */
.quickshop-close {
  position: absolute;
  top: 12px;
  right: 16px;
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
}

/* ---------- MOBILE ---------- */
@media (max-width: 768px) {
  .product-grid {
    grid-template-columns: 1fr;
  }

  .quickshop-content {
    grid-template-columns: 1fr;
    margin: 20px;
  }
}
</style>

<!-- ================= VANILLA JS ================= -->
<script>
document.addEventListener('DOMContentLoaded', function () {

  const section = document.getElementById('quickshop-{{ section.id }}');
  const modal = section.querySelector('.quickshop-modal');
  const image = section.querySelector('#qs-image');
  const title = section.querySelector('#qs-title');
  const price = section.querySelector('#qs-price');
  const variantInput = section.querySelector('#qs-variant-id');

  /* ---------- OPEN MODAL ---------- */
  section.querySelectorAll('.quickshop-trigger').forEach(button => {
    button.addEventListener('click', () => {

      image.src = button.dataset.productImage;
      title.textContent = button.dataset.productTitle;
      price.textContent = button.dataset.price;
      variantInput.value = button.dataset.variantId;

      modal.classList.add('active');
      modal.setAttribute('aria-hidden', 'false');
    });
  });

  /* ---------- CLOSE MODAL ---------- */
  section.querySelector('.quickshop-close').addEventListener('click', closeModal);
  section.querySelector('.quickshop-overlay').addEventListener('click', closeModal);

  function closeModal() {
    modal.classList.remove('active');
    modal.setAttribute('aria-hidden', 'true');
  }

});
</script>

{% schema %}
{
  "name": "Product Grid – Quick Shop",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection"
    }
  ],
  "presets": [
    {
      "name": "Product Grid with Quick Shop"
    }
  ]
}
{% endschema %}
