{% comment %}
=========================================================
SECTION: Product Grid with Quick Shop Popup
PURPOSE:
- Display selectable products in a grid
- Show Quick Shop modal on clicking hotspot icon
- Fully functional Add to Cart (routes object)
- Vanilla JS only
- Responsive (desktop + mobile)
=========================================================
{% endcomment %}

<section id="product-grid-{{ section.id }}" class="product-grid-section">

  <!-- ================= PRODUCT GRID ================= -->
  <div class="product-grid">

    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}

        <div class="product-card">

          <!-- Product Image -->
          <img
            src="{{ product.featured_image | image_url: width: 600 }}"
            width="600"
            height="800"
            alt="{{ product.title }}"
            loading="lazy">

          <!-- Quick Shop Trigger -->
          <button
            class="quickshop-trigger"
            aria-label="Quick shop {{ product.title }}"
            data-product-handle="{{ product.handle }}">
            +
          </button>

        </div>

      {% endif %}
    {% endfor %}

  </div>

  <!-- ================= QUICK SHOP MODAL ================= -->
  <div class="quickshop-modal" aria-hidden="true">

    <div class="quickshop-overlay"></div>

    <div class="quickshop-content">

      <!-- Close Button -->
      <button class="quickshop-close" aria-label="Close popup">Ã—</button>

      <!-- Product Media -->
      <div class="quickshop-image">
        <img
          id="qs-image"
          src=""
          width="600"
          height="800"
          alt="">
      </div>

      <!-- Product Info -->
      <div class="quickshop-info">

        <h2 id="qs-title"></h2>
        <p id="qs-price"></p>
        <p id="qs-description"></p>

        <!-- Variant Select -->
        <select id="qs-variant-select"></select>

        <!-- Add to Cart -->
        <button id="qs-add-to-cart">
          ADD TO CART
        </button>

      </div>

    </div>
  </div>

</section>

<!-- ================= STYLES ================= -->
<style>
.product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
}

.product-card {
  position: relative;
}

.product-card img {
  width: 100%;
  height: auto;
  display: block;
}

.quickshop-trigger {
  position: absolute;
  bottom: 16px;
  right: 16px;
  width: 42px;
  height: 42px;
  border-radius: 50%;
  border: none;
  background: #000;
  color: #fff;
  font-size: 24px;
  cursor: pointer;
}

/* ---------- MODAL ---------- */
.quickshop-modal {
  display: none;
  position: fixed;
  inset: 0;
  z-index: 9999;
}

.quickshop-modal.active {
  display: block;
}

.quickshop-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.6);
}

.quickshop-content {
  position: relative;
  max-width: 900px;
  margin: 5vh auto;
  background: #fff;
  display: grid;
  grid-template-columns: 1fr 1fr;
  padding: 24px;
  z-index: 1;
}

.quickshop-close {
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 24px;
  border: none;
  background: none;
  cursor: pointer;
}

/* ---------- MOBILE ---------- */
@media (max-width: 768px) {
  .product-grid {
    grid-template-columns: 1fr;
  }

  .quickshop-content {
    grid-template-columns: 1fr;
  }
}
</style>

<!-- ================= VANILLA JS ================= -->
<script>
document.addEventListener('DOMContentLoaded', () => {

  const modal = document.querySelector('#product-grid-{{ section.id }} .quickshop-modal');
  const image = modal.querySelector('#qs-image');
  const title = modal.querySelector('#qs-title');
  const price = modal.querySelector('#qs-price');
  const description = modal.querySelector('#qs-description');
  const variantSelect = modal.querySelector('#qs-variant-select');
  const addToCartBtn = modal.querySelector('#qs-add-to-cart');

  let currentVariantId = null;

  /* ---------- OPEN QUICK SHOP ---------- */
  document.querySelectorAll('#product-grid-{{ section.id }} .quickshop-trigger')
    .forEach(button => {

      button.addEventListener('click', async () => {

        const handle = button.dataset.productHandle;

        /* Fetch product JSON */
        const response = await fetch(`/products/${handle}.js`);
        const product = await response.json();

        /* Populate modal content */
        image.src = product.images[0];
        image.alt = product.title;
        title.textContent = product.title;
        description.innerHTML = product.description;
        price.textContent = Shopify.formatMoney(product.price, "{{ shop.money_format }}");

        /* Variants */
        variantSelect.innerHTML = '';
        product.variants.forEach(variant => {
          const option = document.createElement('option');
          option.value = variant.id;
          option.textContent = variant.title;
          variantSelect.appendChild(option);
        });

        currentVariantId = product.variants[0].id;

        modal.classList.add('active');
        modal.setAttribute('aria-hidden', 'false');
      });

    });

  /* ---------- VARIANT CHANGE ---------- */
  variantSelect.addEventListener('change', e => {
    currentVariantId = e.target.value;
  });

  /* ---------- ADD TO CART ---------- */
  addToCartBtn.addEventListener('click', async () => {

    await fetch(routes.cart_add_url, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        id: currentVariantId,
        quantity: 1
      })
    });

    modal.classList.remove('active');
  });

  /* ---------- CLOSE MODAL ---------- */
  modal.querySelector('.quickshop-close').addEventListener('click', () => {
    modal.classList.remove('active');
  });

  modal.querySelector('.quickshop-overlay').addEventListener('click', () => {
    modal.classList.remove('active');
  });

});
</script>

{% schema %}
{
  "name": "Product Grid Quick Shop",
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Product Grid with Quick Shop"
    }
  ]
}
{% endschema %}
