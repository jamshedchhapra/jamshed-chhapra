{% comment %}
=========================================================
SECTION: Product Lookbook Grid + Quick Shop
AUTHOR: Custom (Evaluation Ready)
PURPOSE:
- Product grid with clickable lookbook hotspot
- Quick Shop popup modal
- Add to Cart via AJAX
- Fully responsive
- Vanilla JS only
=========================================================
{% endcomment %}

<section id="lookbook-{{ section.id }}" class="lookbook-section">

  <!-- ================= PRODUCT GRID ================= -->
  <div class="lookbook-grid">

    {% for product in section.settings.products %}
      <div class="lookbook-item">

        <!-- Product Image -->
        <div class="image-wrapper">

          <img
            src="{{ product.featured_image | image_url: width: 800 }}"
            width="800"
            height="800"
            alt="{{ product.title | escape }}"
            loading="lazy">

          <!-- Hotspot Button -->
          <button
            class="hotspot"
            data-product-handle="{{ product.handle }}"
            aria-label="Quick shop {{ product.title }}">
            +
          </button>

        </div>

        <!-- Product Title -->
        <h3 class="product-title">{{ product.title }}</h3>

      </div>
    {% endfor %}

  </div>

  <!-- ================= QUICK SHOP MODAL ================= -->
  <div class="quickshop-modal" aria-hidden="true">

    <div class="modal-overlay"></div>

    <div class="modal-content">

      <!-- Close Button -->
      <button class="modal-close" aria-label="Close">Ã—</button>

      <!-- Dynamic Content -->
      <div class="modal-body">
        <img id="qs-image" src="" width="600" height="600" alt="">
        <h2 id="qs-title"></h2>
        <p id="qs-price"></p>

        <form id="qs-form">
          <input type="hidden" name="id" id="qs-variant-id">
          <button type="submit" class="btn shop-now">Add to Cart</button>
        </form>
      </div>

    </div>
  </div>

</section>

<!-- ================= STYLES ================= -->
<style>
/* ---------- BASE ---------- */
#lookbook-{{ section.id }} {
  font-family: 'Jost', sans-serif;
  padding: 60px 40px;
}

.lookbook-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
}

/* ---------- ITEM ---------- */
.lookbook-item {
  text-align: center;
}

.image-wrapper {
  position: relative;
}

.image-wrapper img {
  width: 100%;
  height: auto;
  display: block;
}

/* ---------- HOTSPOT ---------- */
.hotspot {
  position: absolute;
  top: 15%;
  left: 65%;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: none;
  background: #000;
  color: #fff;
  font-size: 22px;
  cursor: pointer;
}

/* ---------- MODAL ---------- */
.quickshop-modal {
  display: none;
  position: fixed;
  inset: 0;
  z-index: 999;
}

.quickshop-modal.active {
  display: block;
}

.modal-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.6);
}

.modal-content {
  position: relative;
  background: #fff;
  max-width: 500px;
  margin: 10vh auto;
  padding: 30px;
  z-index: 2;
}

.modal-close {
  position: absolute;
  top: 10px;
  right: 15px;
  background: none;
  border: none;
  font-size: 28px;
  cursor: pointer;
}

/* ---------- RESPONSIVE ---------- */
@media (max-width: 768px) {
  .lookbook-grid {
    grid-template-columns: 1fr;
  }

  .modal-content {
    margin: 5vh 20px;
  }
}
</style>

<!-- ================= VANILLA JS ================= -->
<script>
document.addEventListener('DOMContentLoaded', function () {

  const section = document.querySelector('#lookbook-{{ section.id }}');
  const modal = section.querySelector('.quickshop-modal');
  const closeBtn = section.querySelector('.modal-close');
  const overlay = section.querySelector('.modal-overlay');

  /* ---------- OPEN QUICK SHOP ---------- */
  section.querySelectorAll('.hotspot').forEach(button => {
    button.addEventListener('click', function () {

      const handle = this.dataset.productHandle;

      fetch(`/products/${handle}.js`)
        .then(res => res.json())
        .then(product => {

          section.querySelector('#qs-image').src = product.images[0];
          section.querySelector('#qs-image').alt = product.title;
          section.querySelector('#qs-title').textContent = product.title;
          section.querySelector('#qs-price').textContent =
            (product.price / 100).toFixed(2);

          section.querySelector('#qs-variant-id').value =
            product.variants[0].id;

          modal.classList.add('active');
          modal.setAttribute('aria-hidden', 'false');
        });
    });
  });

  /* ---------- CLOSE MODAL ---------- */
  [closeBtn, overlay].forEach(el => {
    el.addEventListener('click', () => {
      modal.classList.remove('active');
      modal.setAttribute('aria-hidden', 'true');
    });
  });

  /* ---------- ADD TO CART ---------- */
  section.querySelector('#qs-form').addEventListener('submit', function (e) {
    e.preventDefault();

    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        id: section.querySelector('#qs-variant-id').value,
        quantity: 1
      })
    }).then(() => {
      modal.classList.remove('active');
    });
  });

});
</script>

{% schema %}
{
  "name": "Product Lookbook Grid",
  "settings": [
    {
      "type": "product_list",
      "id": "products",
      "label": "Select Products"
    }
  ],
  "presets": [
    {
      "name": "Product Lookbook Grid"
    }
  ]
}
{% endschema %}
