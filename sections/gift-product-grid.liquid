{% comment %}
=========================================================
SECTION: Lookbook Product Grid – Quick Shop
AUTHOR: Production-safe Shopify implementation
FEATURES:
- White background with margins
- Section heading
- Product image grid
- Lookbook-style "+" trigger
- Working Quick Shop modal
- Proper Add to Cart using routes object
- Fully responsive
- No empty tags
- Theme Editor safe
=========================================================
{% endcomment %}

<section
  id="lookbook-quickshop-{{ section.id }}"
  class="lookbook-section"
>

  <!-- ================= SECTION CONTAINER ================= -->
  <div class="lookbook-container">

    <!-- ================= SECTION HEADING ================= -->
    {% if section.settings.heading != blank %}
      <h2 class="lookbook-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <!-- ================= PRODUCT GRID ================= -->
    <div class="lookbook-grid">

      {% for block in section.blocks %}
        {% assign product = block.settings.product %}

        {% if product != blank %}
          {% assign image = product.featured_image %}

          <div class="lookbook-item" {{ block.shopify_attributes }}>

            <!-- Product Image -->
            <img
              src="{{ image | image_url: width: 800 }}"
              width="{{ image.width }}"
              height="{{ image.height }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
            >

            <!-- Lookbook Trigger Button -->
            <button
              type="button"
              class="lookbook-trigger"
              aria-label="Quick shop {{ product.title }}"
              data-product-id="{{ product.id }}"
              data-title="{{ product.title | escape }}"
              data-image="{{ image | image_url: width: 800 }}"
              data-price="{{ product.price | money }}"
              data-variant="{{ product.selected_or_first_available_variant.id }}"
            >
              +
            </button>

          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>

  <!-- ================= QUICK SHOP MODAL ================= -->
  <div class="quickshop-modal" aria-hidden="true">

    <div class="quickshop-overlay"></div>

    <div class="quickshop-content">

      <!-- Close Button -->
      <button
        type="button"
        class="quickshop-close"
        aria-label="Close quick shop"
      >
        ×
      </button>

      <!-- Product Image -->
      <div class="quickshop-image">
        <img
          id="qs-image"
          src="{{ 'transparent.png' | asset_url }}"
          width="600"
          height="800"
          alt=""
        >
      </div>

      <!-- Product Info -->
      <div class="quickshop-info">
        <h3 id="qs-title"></h3>
        <p id="qs-price"></p>

        <!-- Add to Cart Form -->
        <form
          method="post"
          action="{{ routes.cart_add_url }}"
          class="quickshop-form"
        >
          <input type="hidden" name="id" id="qs-variant-id">
          <button type="submit" class="quickshop-atc">
            Add to Cart
          </button>
        </form>
      </div>

    </div>
  </div>

</section>

<!-- ================= STYLES ================= -->
<style>
/* ---------- SECTION WRAPPER ---------- */
.lookbook-section {
  background: #ffffff;
  margin-top: 90px;
  padding-bottom: 90px;
}

/* ---------- CONTAINER ---------- */
.lookbook-container {
  max-width: 1337px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ---------- HEADING ---------- */
.lookbook-heading {
  font-family: 'Lustria', serif;
  font-size: 36px;
  margin-bottom: 30px;
}

/* ---------- GRID ---------- */
.lookbook-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

/* ---------- ITEM ---------- */
.lookbook-item {
  position: relative;
}

.lookbook-item img {
  width: 100%;
  height: auto;
  display: block;
}

/* ---------- LOOKBOOK BUTTON ---------- */
.lookbook-trigger {
  position: absolute;
  width: 22px;
  height: 22px;
  border-radius: 50%;
  background: rgba(248, 248, 248, 0.9);
  border: 1.5px solid #000;
  font-size: 16px;
  line-height: 1;
  cursor: pointer;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* ---------- MODAL ---------- */
.quickshop-modal {
  position: fixed;
  inset: 0;
  display: none;
  z-index: 9999;
}

.quickshop-modal.active {
  display: block;
}

.quickshop-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.5);
}

.quickshop-content {
  position: relative;
  background: #fff;
  max-width: 800px;
  margin: 5vh auto;
  padding: 30px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px;
}

/* ---------- CLOSE ---------- */
.quickshop-close {
  position: absolute;
  top: 10px;
  right: 14px;
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
}

/* ---------- INFO ---------- */
.quickshop-atc {
  background: #000;
  color: #fff;
  padding: 14px;
  border: none;
  cursor: pointer;
}

/* ---------- MOBILE ---------- */
@media (max-width: 768px) {
  .lookbook-grid {
    grid-template-columns: 1fr;
  }

  .quickshop-content {
    grid-template-columns: 1fr;
  }
}
</style>

<!-- ================= JAVASCRIPT ================= -->
<script>
document.addEventListener('DOMContentLoaded', () => {

  const section = document.querySelector('#lookbook-quickshop-{{ section.id }}');
  const modal = section.querySelector('.quickshop-modal');
  const overlay = section.querySelector('.quickshop-overlay');
  const closeBtn = section.querySelector('.quickshop-close');

  const img = section.querySelector('#qs-image');
  const title = section.querySelector('#qs-title');
  const price = section.querySelector('#qs-price');
  const variantInput = section.querySelector('#qs-variant-id');

  /* ---------- OPEN MODAL ---------- */
  section.querySelectorAll('.lookbook-trigger').forEach(btn => {
    btn.addEventListener('click', () => {
      img.src = btn.dataset.image;
      img.alt = btn.dataset.title;
      title.textContent = btn.dataset.title;
      price.textContent = btn.dataset.price;
      variantInput.value = btn.dataset.variant;

      modal.classList.add('active');
      modal.setAttribute('aria-hidden', 'false');
    });
  });

  /* ---------- CLOSE MODAL ---------- */
  [overlay, closeBtn].forEach(el => {
    el.addEventListener('click', () => {
      modal.classList.remove('active');
      modal.setAttribute('aria-hidden', 'true');
    });
  });

});
</script>

{% schema %}
{
  "name": "Lookbook – Quick Shop",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Tisso vison in the wild"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product Item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lookbook – Quick Shop",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}
